<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" monitorInterval="60">
  <Properties>
    <Property name="PID">????</Property>
    <Property name="LOG_PATTERN">%clr{%d{yyyy-MM-dd HH:mm:ss.SSS}}{faint} %clr{%5p} %clr{${sys:PID}}{magenta} %clr{---}{faint} %clr{[%15.15t]}{faint} %clr{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n%wEx</Property>
  </Properties>
  <Appenders>
    <RollingRandomAccessFile name="Rolling" fileName="logs/timely-server.log"
    						 filePattern="logs/$${date:yyyy-MM}/timely-server-%d{MM-dd-yyyy}-%i.log.gz">
      <PatternLayout pattern="${LOG_PATTERN}"/>
      <Policies>
      	<SizeBasedTriggeringPolicy size="1024 MB" />
      </Policies>
      <DefaultRolloverStrategy max="10" />
    </RollingRandomAccessFile>
    <RollingRandomAccessFile name="Subscription" fileName="logs/timely-subscriptions.log"
    						 filePattern="logs/$${date:yyyy-MM}/timely-subscriptions-%d{MM-dd-yyyy}-%i.log.gz">
      <PatternLayout pattern="${LOG_PATTERN}"/>
      <Policies>
      	<SizeBasedTriggeringPolicy size="1024 MB" />
      </Policies>
      <DefaultRolloverStrategy max="10" />
    </RollingRandomAccessFile>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="${LOG_PATTERN}"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="debug" includeLocation="false">
      <AppenderRef ref="Console" level="warn" />
      <AppenderRef ref="Rolling" level="debug" />
    </Root>
    <Logger name="timely" additivity="false">
      <AppenderRef ref="Console" level="debug" />
    </Logger>
  </Loggers>
</Configuration>
